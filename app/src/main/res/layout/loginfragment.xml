<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/onezero"
    android:paddingRight="@dimen/onezero">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/onten_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/onezero"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :-        "
                android:textSize="@dimen/onefive" />

            <EditText
                android:id="@+id/edtemail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourzero"
                android:layout_marginLeft="@dimen/five"
                android:hint="Email" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/onezero"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password :- "
                android:textSize="@dimen/onefive" />

            <EditText
                android:id="@+id/edtpassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourzero"
                android:layout_marginLeft="@dimen/five"
                android:hint="Password"
                android:inputType="textPassword" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtforgot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourzero"
            android:layout_marginTop="@dimen/onefive"
            android:gravity="center"
            android:text="Forgot Your Password?"
            android:textColor="@android:color/black"
            android:textSize="@dimen/oneeight" />

        <TextView
            android:id="@+id/txtlogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourzero"
            android:layout_marginTop="@dimen/onefive"
            android:background="@color/PrimaryColor"
            android:gravity="center"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/oneeight" />

        <TextView
            android:id="@+id/registration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourzero"
            android:layout_marginTop="@dimen/onefive"
            android:gravity="center"
            android:text="Not a member? Click here to register now!"
            android:textColor="@android:color/black"
            android:textSize="@dimen/oneeight" />

        <TextView
            android:id="@+id/txtviewguest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourzero"
            android:layout_marginTop="@dimen/onezero"
            android:gravity="center"
            android:text="View as a guest"
            android:textColor="@android:color/black"
            android:textSize="@dimen/oneeight" />

    </LinearLayout>
</LinearLayout>