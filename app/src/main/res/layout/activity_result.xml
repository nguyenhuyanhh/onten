<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <Button
        android:id="@+id/buttonHomePage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="OnTEn Home Page"
        android:layout_alignTop="@+id/buttonRestartQuiz"
        android:layout_toEndOf="@+id/buttonRestartQuiz" />

    <Button
        android:id="@+id/buttonRestartQuiz"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Try Quiz Again"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="200dp" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.14"
        android:textAlignment="center"
        android:layout_above="@+id/ratingBar1"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="20sp" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="0.0"
        android:layout_above="@+id/buttonHomePage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp" />

    <TextView
        android:id="@+id/titleResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Result"
        android:layout_weight="0.18"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:textSize="35sp" />

</RelativeLayout>
