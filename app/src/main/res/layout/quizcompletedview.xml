<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/five"
    android:paddingLeft="@dimen/five"
    android:paddingRight="@dimen/five"
    android:paddingTop="@dimen/five">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#D60c10"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#ffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:background="#ffff"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Microprocessor Quiz 1"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:background="#ffff"></LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/onezero"
            android:text=""
            android:textColor="#000"
            android:textSize="@dimen/oneseven" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/onezero"
            android:text="You have earned the following badges:"
            android:textColor="#000"
            android:textSize="@dimen/oneseven" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llinear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/eight"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/newimage"
            android:layout_width="@dimen/ninezero"
            android:layout_height="@dimen/ninezero"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/seven"
            android:padding="@dimen/onezero"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/txtusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="title"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/onethree"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtqtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="title"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/onezero" />

        <TextView
            android:id="@+id/txtdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="title"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/onezero" />

        <TextView
            android:id="@+id/qdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="title"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/onezero" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlprevnextbutton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fourzero"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtreview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#FF0000"
            android:gravity="center"
            android:padding="@dimen/five"
            android:text="Review"
            android:textColor="#fff"
            android:textSize="@dimen/oneseven"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtexit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#FF0000"
            android:gravity="center"
            android:padding="@dimen/five"
            android:text="Exit"
            android:textColor="#fff"
            android:textSize="@dimen/oneseven"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>