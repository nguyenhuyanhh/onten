<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ninezero"
        android:layout_marginBottom="@dimen/onezero"
        android:background="@drawable/news_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/newimage"
            android:layout_width="@dimen/ninezero"
            android:layout_height="@dimen/ninezero"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/seven"
            android:padding="@dimen/onezero"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:id="@+id/newitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginRight="@dimen/three"
            android:layout_marginTop="@dimen/eight"
            android:layout_toRightOf="@+id/newimage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="title"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/onethree"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="title"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/onethree"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtqtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="title"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/onezero" />

            <TextView
                android:id="@+id/txtdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="title"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/onezero" />

            <TextView
                android:id="@+id/qdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="title"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/onezero" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>